      <div class="card">
        <p><b>nombre de personne : </b><%=@recipe.numberpers%></p>
        <p><b>temps de prepraration : </b><%=@recipe.cooktime%></p>
        <p><b>temps de préparation : </b><%=@recipe.preparationtime%></p>
        <p><b>price : </b><%=@offer.price%></p>
      </div>
      <div class="col-xs-12 col-sm-5">
       <%= image_tag @recipe.picture.url(:medium), class: 'img-recipe' %>
      </div>

<div id="banner">
  <div class="text-center" id="big_title">
    <h2> Commandez des plats maison cuisinés par des passionnés</h2>
  </div>
  <div class="form-inline" id= "position-home-form">
    <div class="container">
      <div class="row ">
        <%= form_tag(offers_path, method: "get", class: "text-center ") do %>

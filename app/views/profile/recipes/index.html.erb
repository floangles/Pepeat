<h1><%=link_to 'add a new recipe', new_profile_recipe_path, class: "btn, btn-warning"%></h1>


<%@recipes.each do |recipe| %>

  <div id="recipe-<%= recipe.id %>">
    <p><%= recipe.name %></p>
    <%=link_to 'show the recipe', profile_recipe_path(recipe), class: "btn, btn-success"  %>
    <%=link_to 'edit the recipe', edit_profile_recipe_path(recipe), class: "btn, btn-success"  %>
    <%= link_to "Delete", recipe, method: :delete, remote: true, class: "btn btn-danger" %>
  </div>
<% end %>
